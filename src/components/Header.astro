  @media (min-width: 1201px) {
    .dropdownmenu {
      background-color: var(--primary);
      width: 100%;
      display: flex;
      justify-content: center;
      padding-top: 50px;
      padding-bottom: 50px;
    }

    .dropdownmenu ul {
      list-style: none;
    }

    .dropdownmenu li {
      float: left;
      position: relative;
      width: auto;
    }

    .dropdownmenu a {
      color: var(--tertiary);
      display: block;
      font-family: parity-sans, sans-serif;
      font-weight: 500;
      font-style: normal;
      font-size: 1.5rem;
      text-transform: uppercase;
      padding: 15px 25px;
      margin-inline: 70px;
      text-decoration: none;
      transition: all 0.25s ease;
    }

    .dropdownmenu li:hover a {
      background: var(--primary);
      color: #6a6a6a;
    }

    #submenu {
      left: 0;
      opacity: 0;
      position: absolute;
      top: 45px;
      visibility: hidden;
      z-index: 1;

      display: flex;
      flex-direction: column;
    }

    li:hover ul#submenu {
      opacity: 1;
      top: 60px;
      visibility: visible;
    }

    #submenu li {
      float: none;
      width: 100%;
    }

    #submenu a {
      color: var(--tertiary);
      background-color: var(--primary);
      width: 70%;

      display: flex;
      justify-content: center;
    }


    #submenu li a:hover{
        color: #6a6a6a;
    }

    nav {
      width: 100%;
      display: flex;
      justify-content: center;
    }

    nav ul {
      list-style: none;
      display: flex;
      flex-direction: row;
    }

    nav li {
      float: left;
      position: relative;
      width: auto;
    }

    nav li:hover a {
      color: var(--black);
    }

    nav a {
      color: var(--dark-brown);
      display: block;
      padding: 15px 70px;
      transition: all 0.25s ease;
    }

    nav a:active {
      color: var(--black);
    }
    }

  @media (max-width: 1200px) {
    .banner {
      background-color: var(--primary);
      padding: 2rem;

      display: flex;
      justify-content: space-between;
      flex-wrap: wrap;
      align-items: center;
      gap: 20px 40px;
    }

    #submenu {
      margin-left: 15px;
    }

    .menu.shown a {
      color: var(--tertiary);
      text-decoration: none;
      line-height: 1.5rem;

      font-family: parity-sans, sans-serif;
      font-weight: 500;
      font-style: normal;
      font-size: 1rem;
      text-transform: uppercase;
    }

    .menu.shown a:hover {
      color: #6a6a6a;
    }

    .toggle-btn {
      display: block;
    }

    .toggle-btn span {
      display: block;
    }

    .menu.shown {
      display: contents;
    }

    .menu ul {
      display: none;
    }

    .menu.shown > ul {
      border-top: 1px solid var(--tertiary);
      padding-top: 1rem;
    }

    .menu.shown ul {
      display: flex;
      flex-flow: column;
      flex-basis: 100%;
      list-style: none;
      gap: 10px;
      margin-top: 5px;
    }
    .bar1,
    .bar2,
    .bar3 {
      width: 35px;
      height: 5px;
      background-color: var(--tertiary);
      margin: 6px 0;
      border-radius: 5px;
      transition: 0.4s;
    }

    .change .bar1 {
      transform: translate(0, 11px) rotate(-45deg);
    }

    .change .bar2 {
      opacity: 0;
    }

    .change .bar3 {
      transform: translate(0, -11px) rotate(45deg);
    }
  }
